<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Dashboard</h1>
  <div>
    <%= link_to 'Novo Ticket', '/tickets/new', class: 'btn btn-primary' %>
  </div>
</div>

<!-- Cards com estatÃ­sticas -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-white bg-primary">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title"><%= @total_tickets %></h4>
            <p class="card-text">Total de Tickets</p>
          </div>
          <div class="align-self-center">
            <i class="fas fa-ticket-alt fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to 'Ver todos', '/tickets', class: 'text-white text-decoration-none' %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-white bg-success">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title"><%= @total_clients %></h4>
            <p class="card-text">Total de Clientes</p>
          </div>
          <div class="align-self-center">
            <i class="fas fa-users fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to 'Ver todos', "/clients", class: 'text-white text-decoration-none' %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-white bg-info">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title"><%= @total_devices %></h4>
            <p class="card-text">Dispositivos</p>
          </div>
          <div class="align-self-center">
            <i class="fas fa-mobile-alt fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to 'Ver todos', "/mobile_devices", class: 'text-white text-decoration-none' %>
      </div>
    </div>
  </div>
</div>


<!-- Tickets por Status -->
<div class="row mb-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5>Tickets por Status</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <% @tickets_by_status.each do |status, count| %>
            <div class="col-md-3 mb-3">
              <div class="card h-100">
                <div class="card-body text-center">
                  <span class="badge bg-<%= status_color(status) %> fs-6 mb-2"><%= status %></span>
                  <h3 class="card-title"><%= count %></h3>
                  <%= link_to 'Ver Tickets', "/tickets/status/#{status}", 
                      class: 'btn btn-outline-primary btn-sm' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

