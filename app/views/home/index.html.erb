<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <title>TechAssist - Sistema de Assistência Técnica</title>
  </head>
  <body>
    <div class="container mt-5">
      <div class="jumbotron bg-primary text-white p-5 rounded mb-5">
        <h1 class="display-4">TechAssist</h1>
        <p class="lead">Sistema de Gerenciamento de Assistência Técnica</p>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-info text-white">
              <h3>Buscar Cliente</h3>
            </div>
            <div class="card-body">
              <%= form_with url: search_clients_path, method: :get, local: true do %>
                <div class="form-group mb-3">
                  <%= label_tag :q_cpf_cont, "CPF do Cliente" %>
                  <%= text_field_tag :q_cpf_cont, params[:q_cpf_cont], class: "form-control", placeholder: "Digite o CPF (apenas números)" %>
                </div>
                <%= submit_tag "Pesquisar Cliente", class: "btn btn-info btn-block w-100" %>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-success text-white">
              <h3>Buscar Dispositivo</h3>
            </div>
            <div class="card-body">
              <%= form_with url: search_mobile_devices_path, method: :get, local: true do %>
                <div class="form-group mb-3">
                  <%= label_tag :q_imei_cont, "IMEI do Dispositivo" %>
                  <%= text_field_tag :q_imei_cont, params[:q_imei_cont], class: "form-control", placeholder: "Digite o IMEI" %>
                </div>
                <%= submit_tag "Pesquisar Dispositivo", class: "btn btn-success btn-block w-100" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row mt-5">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h3>Links Rápidos</h3>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <a href="/api/v1/clients" class="btn btn-outline-primary btn-block w-100 mb-2">Ver Todos os Clientes (API)</a>
                </div>
                <div class="col-md-3">
                  <a href="/api/v1/mobile_devices" class="btn btn-outline-success btn-block w-100 mb-2">Ver Todos os Dispositivos (API)</a>
                </div>
                <div class="col-md-3">
                  <a href="/api/v1/tickets" class="btn btn-outline-warning btn-block w-100 mb-2">Ver Todos os Tickets (API)</a>
                </div>
                <div class="col-md-3">
                  <a href="/users/sign_in" class="btn btn-outline-secondary btn-block w-100 mb-2">Login</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>