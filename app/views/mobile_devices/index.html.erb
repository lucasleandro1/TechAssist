<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Dispositivos Móveis</h1>
  <%= link_to 'Novo Dispositivo', new_mobile_device_path, class: 'btn btn-primary' %>
</div>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: search_mobile_devices_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-8">
        <%= f.text_field :q_imei_cont, value: params[:q_imei_cont], 
            placeholder: "Digite o IMEI para pesquisar", class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.submit "Pesquisar", class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3>Lista de Dispositivos (<%= @mobile_devices.count %>)</h3>
  </div>
  <div class="card-body">
    <% if @mobile_devices.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Marca</th>
              <th>Modelo</th>
              <th>IMEI</th>
              <th>Serial</th>
              <th>Tickets</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @mobile_devices.each do |device| %>
              <tr>
                <td><%= device.client.nome %></td>
                <td><%= device.marca %></td>
                <td><%= device.modelo %></td>
                <td><%= device.imei %></td>
                <td><%= device.serial %></td>
                <td>
                  <span class="badge bg-info">
                    <%= device.tickets.count %> tickets
                  </span>
                </td>
                <td>
                  <%= link_to 'Ver', device, class: 'btn btn-sm btn-outline-primary' %>
                  <%= link_to 'Editar', edit_mobile_device_path(device), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to 'Excluir', device, method: :delete, 
                      confirm: 'Tem certeza? Isso excluirá todos os tickets associados.', 
                      class: 'btn btn-sm btn-outline-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <p class="text-muted">Nenhum dispositivo encontrado</p>
        <%= link_to 'Cadastrar Primeiro Dispositivo', new_mobile_device_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
