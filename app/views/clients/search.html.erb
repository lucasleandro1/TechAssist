<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <title>TechAssist - Busca de Clientes</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1>Resultado da Busca - Clientes</h1>
      
      <%= link_to "← Voltar", root_path, class: "btn btn-secondary mb-3" %>
      
      <% if params[:q_cpf_cont].present? %>
        <div class="alert alert-info">
          Resultados para CPF: <strong><%= params[:q_cpf_cont] %></strong>
        </div>
        
        <% if @clients && @clients.any? %>
          <div class="row">
            <% @clients.each do |client| %>
              <div class="col-md-6 mb-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title"><%= client["name"] rescue "Nome não disponível" %></h5>
                    <p class="card-text">
                      <strong>CPF:</strong> <%= client["cpf"] rescue "N/A" %><br>
                      <strong>Email:</strong> <%= client["email"] rescue "N/A" %><br>
                      <strong>Telefone:</strong> <%= client["phone"] rescue "N/A" %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-warning">
            Nenhum cliente encontrado com este CPF.
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-danger">
          Por favor, informe um CPF para buscar.
        </div>
      <% end %>
      
      <!-- Formulário para nova busca -->
      <div class="mt-4">
        <h3>Nova Busca</h3>
        <%= form_with url: search_clients_path, method: :get, local: true do %>
          <div class="row">
            <div class="col-sm-8">
              <div class="form-group">
                <%= label_tag :q_cpf_cont, "CPF do Cliente" %>
                <%= text_field_tag :q_cpf_cont, params[:q_cpf_cont], class: "form-control", placeholder: "Digite o CPF" %>
              </div>
            </div>
            <div class="col-sm-4">
              <%= submit_tag "Pesquisar", class: "btn btn-primary", style: "margin-top: 31px;" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>