<% if @clients.any? %>
<h1>Resultados da Busca</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.nome %></td>
          <td><%= client.cpf %></td>
          <td><%= client.email %></td>
          <td><%= client.telefone %></td>
          <td>
            <%= link_to 'editar', edit_client_path(client), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= link_to 'Cadastrar Novo Cliente', new_client_path, class: "btn btn-success" %>
<% end %>
