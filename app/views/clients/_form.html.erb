<%= form_with model: @client, local: true do |f| %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@client.errors.count, "erro") %> impediu que este cliente fosse salvo:</h4>
      <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :nome, class: "form-label" %>
        <%= f.text_field :nome, class: "form-control" %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :cpf, "CPF", class: "form-label" %>
        <%= f.text_field :cpf, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :telefone, class: "form-label" %>
        <%= f.text_field :telefone, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit "Salvar Cliente", class: "btn btn-primary" %>
    <%= link_to 'Cancelar', clients_path, class: 'btn btn-secondary' %>
  </div>
<% end %>