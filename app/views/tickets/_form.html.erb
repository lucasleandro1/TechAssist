<%= form_with model: @ticket, local: true, multipart: true do |f| %>
  <% if @ticket.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@ticket.errors.count, "erro") %> impediu que este ticket fosse salvo:</h4>
      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :mobile_device_id, "Dispositivo", class: "form-label" %>
        <%= f.select :mobile_device_id, 
            options_from_collection_for_select(@mobile_devices, :id, 
              ->(device) { "#{device.marca} #{device.modelo} - #{device.client.nome}" }, 
              @ticket.mobile_device_id), 
            { prompt: 'Selecione um dispositivo' }, 
            { class: "form-select" } %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :data_abertura, "Data de Abertura", class: "form-label" %>
        <%= f.date_field :data_abertura, class: "form-control", value: @ticket.data_abertura || Date.current %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :status, class: "form-label" %>
        <%= f.select :status, 
            options_for_select(Ticket.statuses.map { |k, v| [k, k] }, @ticket.status), 
            { prompt: 'Selecione um status' }, 
            { class: "form-select" } %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :sintoma, class: "form-label" %>
        <%= f.select :sintoma, 
            options_for_select(Ticket.sintomas.map { |k, v| [k, k] }, @ticket.sintoma), 
            { prompt: 'Selecione um sintoma' }, 
            { class: "form-select" } %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :descricao, "Descrição", class: "form-label" %>
    <%= f.text_area :descricao, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :comentario, "Comentário", class: "form-label" %>
    <%= f.text_area :comentario, class: "form-control", rows: 3 %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :repair_price, "Valor do Reparo (R$)", class: "form-label" %>
        <%= f.number_field :repair_price, step: 0.01, class: "form-control" %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :data_fechamento, "Data de Fechamento", class: "form-label" %>
        <%= f.date_field :data_fechamento, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :pecas, "Peças", class: "form-label" %>
    <%= f.select :pecas, 
        options_for_select(Ticket::PECAS.map { |k, v| [k, v] }), 
        { prompt: 'Selecione as peças' }, 
        { class: "form-select", multiple: true } %>
    <div class="form-text">Segure Ctrl (ou Cmd no Mac) para selecionar múltiplas peças</div>
  </div>

  <div class="mb-3">
    <%= f.label :arquivos, "Arquivos", class: "form-label" %>
    <%= f.file_field :arquivos, multiple: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Salvar Ticket", class: "btn btn-primary" %>
    <%= link_to 'Cancelar', tickets_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

