<%= form_with model: @ticket, local: true, multipart: true do |f| %>
  <% if @ticket.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are validation errors. Please check all required fields:</h4>
      <ul>
        <li>Dispositivo (Mobile Device) is required</li>
        <li>Descrição (Description) is required</li>
        <li>Status is required</li>
        <li>Sintoma (Symptom) is required</li>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label for="ticket_mobile_device_id" class="form-label">Dispositivo</label>
        <%= f.select :mobile_device_id, 
            options_from_collection_for_select(@mobile_devices, :id, 
              ->(device) { "#{device.marca} #{device.modelo} - #{device.client.nome}" }, 
              @ticket.mobile_device_id), 
            { prompt: 'Selecione um dispositivo' }, 
            { class: "form-select" } %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <label for="ticket_data_abertura" class="form-label">Data de Abertura</label>
        <%= f.date_field :data_abertura, class: "form-control", value: @ticket.data_abertura || Date.current %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label for="ticket_status" class="form-label">Status</label>
        <%= f.select :status, 
            options_for_select(Ticket.statuses.map { |k, v| [k, k] }, @ticket.status), 
            { prompt: 'Selecione um status' }, 
            { class: "form-select" } %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <label for="ticket_sintoma" class="form-label">Sintoma</label>
        <%= f.select :sintoma, 
            options_for_select(Ticket.sintomas.map { |k, v| [k, k] }, @ticket.sintoma), 
            { prompt: 'Selecione um sintoma' }, 
            { class: "form-select" } %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <label for="ticket_descricao" class="form-label">Descrição</label>
    <%= f.text_area :descricao, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <label for="ticket_comentario" class="form-label">Comentário</label>
    <%= f.text_area :comentario, class: "form-control", rows: 3 %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label for="ticket_repair_price" class="form-label">Valor do Reparo (R$)</label>
        <%= f.number_field :repair_price, step: 0.01, class: "form-control" %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <label for="ticket_data_fechamento" class="form-label">Data de Fechamento</label>
        <%= f.date_field :data_fechamento, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <label for="ticket_pecas" class="form-label">Peças</label>
    <%= f.select :pecas, 
        options_for_select(Ticket::PECAS.map { |k, v| [k, v] }), 
        { prompt: 'Selecione as peças' }, 
        { class: "form-select", multiple: true } %>
    <div class="form-text">Segure Ctrl (ou Cmd no Mac) para selecionar múltiplas peças</div>
  </div>

  <div class="mb-3">
    <label for="ticket_arquivos" class="form-label">Arquivos</label>
    <%= f.file_field :arquivos, multiple: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Salvar Ticket", class: "btn btn-primary" %>
    <%= link_to 'Cancelar', tickets_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

